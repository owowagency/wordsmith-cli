{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "outDir": "bin",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
        },
    },
    "exclude": [
        "node_modules",
        "tests"
    ]
}
